{
    "name": "linkit",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "link it.",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": ["css/content-script.css"],
            "js": [
                "js/content-script.js"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ]
}